#employees
  %input.search{:placeholder => "Search by name or email.....", :type => "text"}
  %ul.list
    - @employees.each do |e|
      = image_tag(e.s3_image) || image_tag(e.avatar.thumb.url)
      %li
        %h3.name 
          = e.name
        %p.email
          = e.email
        %p
          = e.title
        %p
          = e.department
        %p
          = e.team
  %ul.pagination

:javascript 
  var options = { 
    valueNames: [ 'name', 'email' ],
    page: 24,
    pagination: true
   };
  var employeeList = new List('employees', options);

