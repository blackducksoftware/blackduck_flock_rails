.container
  .row
    .col-lg-12
      %h1.page-header Employee Listing
    .row
      .col-lg-6
        .input-group
          %input.form-control{:placeholder => "Search by name or email.....", :type => "text"}
            %span.input-group-btn
              %button.btn.btn-default{:type => "button"} Go!
    .row
      .employees
        .ul
          - @employees.each do |e|
            .li
              .col-lg-3.col-md-4.col-xs-6.thumbnail
                %p
                  = image_tag(e.avatar.thumb.url)
                %p.name
                  = e.name
                %p.email
                  = e.email
                %p
                  = e.title
                %p
                  = e.department
                %p
                  = e.team

